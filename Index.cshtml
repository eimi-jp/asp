
@{
    ViewBag.Title = "Index";
}

<style>
    table{
        border-collapse: collapse;
    }
    table, th, td {
        border: 1px solid black;
        text-align: center;
        padding: 10px 20px 10px 20px;
    }
</style>

<main>
    <h2>Danh sách sản phẩm có giá tiền >= 250</h2>
    <table>
        <tr>
            <th>masp</th>
            <th>hangsx</th>
            <th>tensp</th>
            <th>soluong</th>
            <th>giatien</th>
        </tr>
        @foreach (var item in ViewBag.ds1)
        {
            <tr>
                <td>@item.masp</td>
                <td>@item.hangsx</td>
                <td>@item.tensp</td>
                <td>@item.soluong</td>
                <td>@item.giatien</td>
            </tr>
        }
    </table>

    <h2>Danh sách sản phẩm thuộc hãng Xiaomi</h2>
    <table>
        <tr>
            <th>masp</th>
            <th>hangsx</th>
            <th>tensp</th>
            <th>soluong</th>
            <th>giatien</th>
        </tr>
        @foreach (var item in ViewBag.ds2)
        {
            <tr>
                <td>@item.masp</td>
                <td>@item.hangsx</td>
                <td>@item.tensp</td>
                <td>@item.soluong</td>
                <td>@item.giatien</td>
            </tr>
        }
    </table>
</main>